<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <TextView
            android:id="@+id/competitionAnswerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How to build android app in 1 month"
            android:layout_toRightOf="@id/competePostedByImg"
            android:layout_marginLeft="5dp"
            android:textSize="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/competitionAnswerTitle"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/competePostedByImg"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Level"
                />

            <TextView
                android:id="@+id/competeanswer_level"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="3"
                android:textSize="14dp"/>


            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_calendar" />

            <TextView
                android:id="@+id/competeanswer_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 days"
                android:textSize="10dp"/>

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>