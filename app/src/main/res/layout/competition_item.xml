<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="#fff">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/competePostedByImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp" />

        <TextView
            android:id="@+id/competePostTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/competePostedByImg"
            android:text="How to build android app in 1 month"
            android:textColor="#212121"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/competePostedByName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/competePostTitle"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/competePostedByImg"
            android:text="username"
            android:textColor="#696969"
            android:textSize="12dp" />

        <LinearLayout
            android:id="@+id/detailsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/competePostedByName"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/competePostedByImg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_briefcase" />

            <TextView
                android:id="@+id/competeNbSolve"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="3"
                android:textSize="14dp" />


            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_calendar" />

            <TextView
                android:id="@+id/competeCreated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 days"
                android:textSize="10dp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>