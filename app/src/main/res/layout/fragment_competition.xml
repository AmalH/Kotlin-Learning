<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100"
            android:layout_margin="8dp">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_marginBottom="10dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="98"
                        android:orientation="vertical"
                        android:layout_marginLeft="2dp"
                        android:layout_marginBottom="3dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="100"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="5dp"
                            >
                            <TextView
                                android:id="@+id/competeSubject"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="subject..."
                                android:textSize="15dp"
                                android:layout_weight="75"
                                android:textColor="#212121"
                                />
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_briefcase"
                                android:layout_gravity="center"/>
                            <TextView
                                android:id="@+id/competeSolvedTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13dp"
                                android:text="0"
                                android:layout_gravity="center"
                                tools:ignore="MissingPrefix"
                                />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/competeShowContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="currentQuestion"
                            android:layout_marginBottom="5dp"
                            />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="end|bottom">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:id="@+id/competeShowUsername"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="name"
                                    android:textSize="12dp"
                                    android:layout_gravity="end"
                                    tools:ignore="MissingPrefix"
                                    />
                                <TextView
                                    android:id="@+id/competeShowCreated"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="created"
                                    android:textSize="11dp"
                                    android:layout_gravity="end"
                                    tools:ignore="MissingPrefix"
                                    />
                            </LinearLayout>
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/competeShowUserPicture"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="5dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/myAnswer"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                card_view:cardUseCompatPadding="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >


                <LinearLayout
                    android:id="@+id/competeLayoutAnswered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Answered "
                        android:layout_margin="10dp"
                        android:textColor="#212121"
                        />
                    <com.rey.material.widget.ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="80dp"
                        android:src="@drawable/ic_calendar"
                        />
                    <TextView
                        android:id="@+id/answerDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="date"
                        />
                    <ImageButton
                        android:id="@+id/competeEditAnswer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_edit"
                        android:background="@color/float_transparent"
                        android:layout_marginLeft="20dp"
                        />

                </LinearLayout>

                <io.github.kbiakov.codeview.CodeView
                    android:id="@+id/competeAnswerCodeView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    >
                </io.github.kbiakov.codeview.CodeView>
                <EditText
                    android:id="@+id/competeAddContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    />
                <Button
                    android:id="@+id/competeAddAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:layout_gravity="end"
                    android:visibility="gone"
                    android:background="@color/float_transparent"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arguments "
                    android:layout_margin="4dp"
                    android:textSize="13dp"
                    android:textColor="#212121"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Arguments must be separated with spaces)"
                    android:layout_margin="3dp"
                    android:textColor="#212121"
                    android:textSize="11dp"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/competeArguments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Args..."
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:padding="10dp"
                android:background="@color/paperBackground"
                />

            <LinearLayout
                android:id="@+id/competeRun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="end"
                android:paddingTop="15dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Run "
                    android:layout_marginBottom="2dp"
                    android:textStyle="bold"
                    android:textSize="7pt"
                    android:backgroundTint="@color/float_transparent"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_run"/>
            </LinearLayout>

        </LinearLayout>

            <TextView
                android:id="@+id/competeResponse"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_margin="6dp"
                android:editable="false"
                android:textSize="14sp"
                android:background="@color/paperBackground"
                android:visibility="gone"
                />
        </LinearLayout>


    </ScrollView>

</FrameLayout>
