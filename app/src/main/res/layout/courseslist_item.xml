<?xml version="1.0" encoding="utf-8"?>


<com.lucasurbas.listitemview.ListItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coursesListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="7dp"
    app:liv_menu="@menu/menu_course"
    app:liv_menuActionColor="#000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/courseIcon"
            android:layout_width="55px"
            android:layout_height="55px"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/listTitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/courseIcon"
            android:text="hhhh"
            android:textColor="#000000"
            android:textSize="16dip"
            fontPath="fonts/open_sans_regular.ttf"
            tools:ignore="MissingPrefix"/>

        <ProgressBar
            android:id="@+id/courseProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="180dp"
            android:layout_height="7dp"
            android:layout_below="@id/listTitle_text"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/courseIcon"
            android:max="100"
            android:progress="20"
            android:progressTint="#7DA7C8" />

    </RelativeLayout>


</com.lucasurbas.listitemview.ListItemView>

