<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/currentCoursesContainer"
    android:background="@color/main_background"
    android:orientation="vertical"
    android:weightSum="100">
    <TextView
        android:id="@+id/startedCoursesTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Courses started"
        fontPath="fonts/open_sans_regular.ttf"
        android:textColor="@color/baseColor1"
        android:textStyle="bold"
        android:textSize="10pt"
        tools:ignore="MissingPrefix" />
    <ListView
        android:id="@+id/myCoursesLv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@+id/startedCoursesTv"/>

    <com.rey.material.widget.FloatingActionButton
        android:id="@+id/moreCoursesBtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="16dp"
        android:clickable="true"
        android:elevation="9dp"
        app:fab_backgroundColor="@color/baseColor2"
        app:fab_iconSrc="@drawable/ic_action_add_forum"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>


</RelativeLayout>
