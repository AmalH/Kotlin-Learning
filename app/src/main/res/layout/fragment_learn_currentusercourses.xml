<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/currentCoursesContainer"
    android:background="@color/main_background"
    android:orientation="vertical"
    android:weightSum="100">
    <TextView
        android:id="@+id/startedCoursesTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Courses started"
        fontPath="fonts/graublau_slab.ttf"
        android:textColor="@color/base_color_1"
        android:textStyle="bold"
        android:textSize="10pt"
        tools:ignore="MissingPrefix" />
        @fontPath=""/>
    <ListView
        android:id="@+id/myCoursesLv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@+id/startedCoursesTv"
        />
    <com.rey.material.widget.FloatingActionButton
        android:id="@+id/moreCoursesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_backgroundColor="@color/base_color_1"
        android:layout_margin="16dp"
        app:fab_iconSrc="@drawable/ic_add_course"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>
